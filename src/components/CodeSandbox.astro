---
import Sandbox from "./Sandbox";

import type { SandpackPredefinedTemplate } from "@codesandbox/sandpack-react";

interface Props {
  files: Record<string, string>;
  template?: SandpackPredefinedTemplate;
  showLineNumbers?: boolean;
  editorHeight?: number;
  activeFile?: string;
  visibleFiles?: string[];
  dependencies?: Record<string, string>;
  showConsole?: boolean;
  consoleOnly?: boolean;
}

const { 
  files, 
  template = "react",
  showLineNumbers = true,
  editorHeight = 420,
  activeFile,
  visibleFiles,
  dependencies = {},
  showConsole = false,
  consoleOnly = false,
} = Astro.props;

const placeholderHeight = editorHeight;
---

<div class="sandbox-container" style={`min-height: ${placeholderHeight}px;`}>
  <div class="sandbox-loading">
    <div class="sandbox-loading-tabs">
      <span class="tab-placeholder"></span>
      <span class="tab-placeholder"></span>
    </div>
    <div class="sandbox-loading-content">
      <div class="loading-shimmer"></div>
    </div>
  </div>
  <Sandbox
    client:only="react"
    files={files}
    template={template}
    showLineNumbers={showLineNumbers}
    editorHeight={editorHeight}
    activeFile={activeFile}
    visibleFiles={visibleFiles}
    dependencies={dependencies}
    showConsole={showConsole}
    consoleOnly={consoleOnly}
  />
</div>

<style>
  .sandbox-container {
    margin: 1.5rem 0;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid #30363d;
    background: #282a36;
    position: relative;
  }

  .sandbox-loading {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
  }

  .sandbox-loading-tabs {
    display: flex;
    gap: 0;
    padding: 8px 12px;
    background: #21222c;
    border-bottom: 1px solid #30363d;
  }

  .tab-placeholder {
    width: 70px;
    height: 28px;
    background: #30363d;
    border-radius: 4px;
    margin-right: 8px;
  }

  .sandbox-loading-content {
    flex: 1;
    display: flex;
    overflow: hidden;
  }

  .loading-shimmer {
    flex: 1;
    background: linear-gradient(
      90deg,
      #282a36 0%,
      #30363d 50%,
      #282a36 100%
    );
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite;
  }

  @keyframes shimmer {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }

  /* Hide loading state once Sandpack renders */
  .sandbox-container:has(.sp-wrapper) {
    background: transparent;
    border: none;
  }

  .sandbox-container:has(.sp-wrapper) .sandbox-loading {
    display: none;
  }

  /* Remove wrapper styles from inner Sandbox */
  .sandbox-container :global(.sandpack-wrapper) {
    margin: 0;
    border: none;
    border-radius: 0;
  }

  /* Better contrast for Sandpack action buttons */
  .sandbox-container :global(.sp-preview-actions button),
  .sandbox-container :global(.sp-preview-actions a) {
    opacity: 1;
    color: #e4e4e7;
  }

  .sandbox-container :global(.sp-preview-actions button:hover),
  .sandbox-container :global(.sp-preview-actions a:hover) {
    color: #fff;
  }

  /* Console-only mode styles */
  .sandbox-container :global(.console-only .console-panel) {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .sandbox-container :global(.console-only .console-header) {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 6px 12px;
    background: #282a36;
    border-bottom: 1px solid #30363d;
    font-size: 12px;
    color: #99a1b3;
    font-weight: 400;
    letter-spacing: 0.01em;
  }

  .sandbox-container :global(.console-only .sp-refresh-button) {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 4px 8px;
    margin: -4px -8px;
    background: transparent;
    border: none;
    border-radius: 4px;
    color: #99a1b3;
    font-size: 12px;
    font-family: inherit;
    cursor: pointer;
    transition: color 0.15s, background 0.15s;
  }

  .sandbox-container :global(.console-only .sp-refresh-button:hover) {
    color: #f6f7f9;
    background: rgba(255, 255, 255, 0.1);
  }

  .sandbox-container :global(.console-only .sp-console) {
    flex: 1;
  }

  /* Better console text wrapping */
  .sandbox-container :global(.sp-console) {
    font-size: 13px;
  }

  .sandbox-container :global(.sp-console pre),
  .sandbox-container :global(.sp-console code) {
    white-space: pre-wrap !important;
    word-wrap: break-word !important;
    word-break: break-word !important;
    overflow-wrap: break-word !important;
  }

  .sandbox-container :global(.sp-console > div) {
    overflow-x: hidden !important;
  }
</style>

