---
import Icon from './Icon.astro';

interface Props {
  username: string;
}

const { username } = Astro.props;
---

<div class="newsletter">
  <div class="header-container">
    <Icon type="lucide" name="mail" width={24} height={24} class="glow-icon" />
    <h2>Subscribe</h2>
  </div>
  <p>New posts, straight to your inbox.</p>
  <form 
    action={`https://buttondown.email/api/emails/embed-subscribe/${username}`}
    method="post"
    class="newsletter-form"
  >
    <input
      type="email"
      name="email_address"
      placeholder="your@email.com"
      required
      class="newsletter-input"
    />
    <button type="submit" class="newsletter-button">
      Join
    </button>
  </form>
  <span class="newsletter-note">No spam. Unsubscribe anytime.</span>
</div>

<style>
  .newsletter {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .header-container {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .header-container h2 {
    margin: 0;
  }

  .newsletter p {
    margin: 0;
    margin-bottom: 0.5rem;
    color: #c7c7c7;
    font-size: 0.875rem;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .newsletter-input {
    width: 100%;
    padding: 0.625rem 0.875rem;
    background: #1a1a1a;
    border: 1px solid #353535;
    color: #ffffff;
    font-size: 0.9rem;
    font-family: inherit;
    transition: border-color 0.15s ease, box-shadow 0.15s ease;
  }

  .newsletter-input::placeholder {
    color: #6b6b6b;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 2px rgba(var(--primary-rgb), 0.2);
  }

  .newsletter-button {
    width: 100%;
    padding: 0.625rem 1rem;
    background: var(--primary);
    color: #ffffff;
    border: none;
    font-size: 0.9rem;
    font-weight: 600;
    font-family: inherit;
    cursor: pointer;
    transition: background-color 0.15s ease, filter 0.15s ease;
  }

  .newsletter-button:hover {
    filter: brightness(1.1);
  }

  .newsletter-button:active {
    filter: brightness(0.95);
  }

  .newsletter-note {
    font-size: 0.75rem;
    color: #6b6b6b;
    margin-top: 0.125rem;
  }
</style>

